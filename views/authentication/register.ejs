<%- include("../partials/header.ejs") %>

<div class="create-article-section">
    <h1 class="section-title">Create Your Account</h1>
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
    <div class="form-errors">
        <ul>
            <% errors.forEach((err) => { %>
            <li><%= err %></li>
            <% }) %>
        </ul>
    </div>
    <% } %>
    <form class="article-form" action="/auth/register" method="POST" autocomplete="off">
        <div class="form-group">
            <label for="name" class="form-label">Full Name</label>
            <input
                type="text"
                id="name"
                name="name"
                class="form-input"
                maxlength="100"
                placeholder="Enter your full name"
                required
            />
        </div>
        <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input
                type="text"
                id="username"
                name="username"
                class="form-input"
                maxlength="255"
                placeholder="Choose a username"
                required
            />
        </div>
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input
                type="email"
                id="email"
                name="email"
                class="form-input"
                maxlength="255"
                placeholder="Enter your email address"
                required
            />
        </div>
        <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input
                type="password"
                id="password"
                name="password"
                class="form-input"
                maxlength="255"
                placeholder="Create a password"
                required
            />
        </div>
        <div class="form-group">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                class="form-input"
                maxlength="255"
                placeholder="Re-enter your password"
                required
            />
        </div>
        <div class="form-actions">
            <button type="submit" class="btn-primary">
                <span class="btn-icon">üìù</span>
                <span class="btn-text">Register</span>
            </button>
        </div>
        <div style="margin-top: 1.5rem; text-align: center">
            <span style="color: rgba(255, 255, 255, 0.7)">Already have an account?</span>
            <a href="/auth/login" class="nav-link" style="display: inline; padding: 0; background: none"
                >Login</a
            >
        </div>
    </form>
</div>

<%- include("../partials/footer.ejs") %>
